<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-4">
    <h6 class="mb-2 font-weight-bold">プロダクト名</h6>
    <%= form.text_field :name, id: :product_name, class:"w-100"%>
  </div>

  <div class="field mb-4">
    <h6 class="mb-2 font-weight-bold">概要</h6>
    <%= form.text_area :about, id: :product_about, class:"w-100"%>
  </div>

  <div class="field mb-4">
    <h6 class="mb-2 font-weight-bold">求める人</h6>
    <%= form.text_area :need_people, id: :product_need_people, class:"w-100" %>
  </div>

  <div class="field mb-4">
    <h6 class="mb-2 font-weight-bold">夏明けの目標</h6>
    <%= form.text_area :goal, id: :product_goal, class:"w-100" %>
  </div>

  <div class="actions text-center">
    <%= form.submit "送信", class:"btn btn-primary w-50"%>
  </div>
<% end %>
