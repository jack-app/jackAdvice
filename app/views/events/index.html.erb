<p id="notice"><%= notice %></p>

<div class="mx-auto" style="max-width: 500px;">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col p-5 w-100 h-100 d-inline-block">イベント名</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%=link_to event.name, event_products_path(event.id), class: "w-100 h-100 d-inline-block", style:"padding: 1.2em; font-size: 1.3em;" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>
<div class="text-right mx-auto" style="max-width: 500px">
  <%= link_to 'イベントを追加', new_event_path, class: "btn btn-primary" %>
</div>
